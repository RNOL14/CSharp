<?xml version="1.0" encoding="utf-8" ?>
<ContentView
  x:Class="MauiApp13.Controls.MildredStepper"
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:controls="clr-namespace:MauiApp13.Controls;assembly=MauiApp13">

  <Grid ColumnDefinitions="50,120,50">

    <!-- Minus Button -->
    <Button
      Grid.Column="0"
      Text="-"
      Clicked="MinusButton_Clicked"
      x:Name="MinusButton"
      VerticalOptions="Center"
      HorizontalOptions="Center"
      MinimumWidthRequest="50"/>



    <controls:BorderlessEntry
      x:Name="ValueEntry"
      Grid.Column="1"
      Keyboard="Numeric"
      FontSize="42"
      HorizontalTextAlignment="Center"
      TextChanged="ValueEntry_TextChanged"
      VerticalOptions="Center"
      HorizontalOptions="Center"/>

    <!-- Plus Button -->
    <Button
      Grid.Column="2"
      Text="+"
      Clicked="PlusButton_Clicked"
      x:Name="PlusButton"
      VerticalOptions="Center"
      HorizontalOptions="Center"
      MinimumWidthRequest="50"/>

  </Grid>
</ContentView>
