<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:MauiApp13.Controls"
             x:Class="MauiApp13.MainPage">


    <VerticalStackLayout
        Spacing="20"
        Padding="30"
        VerticalOptions="Center">

        <Label
            Text="Custom Stepper "
            FontSize="22"
            HorizontalOptions="Center"/>

        <controls:MildredStepper
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Value="{Binding Count, Mode=TwoWay}">

            <controls:MildredStepper.Triggers>
                <DataTrigger TargetType="controls:MildredStepper"
                             Binding="{Binding IsStepperEnabled}"
                             Value="False">
                    <Setter Property="IsEnabled"
                            Value="False"/>
                </DataTrigger>
            </controls:MildredStepper.Triggers>

        </controls:MildredStepper>

        <Button
            Text="Toggle Enable"
            Clicked="OnToggleClicked"/>

    </VerticalStackLayout>

</ContentPage>
