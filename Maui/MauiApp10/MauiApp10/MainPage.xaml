<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp10.MainPage">


    <CollectionView ItemsSource="{Binding Todos}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <SwipeView>
                    <SwipeView.RightItems>
                        <SwipeItems>
                            <SwipeItem
                                Text="Complete"
                                BackgroundColor="Green"
                                Command="{Binding BindingContext.CompleteTodoCommand, Source={x:Reference MainPage}}"
                                CommandParameter="{Binding .}"/>

                            <SwipeItem
                                Text="Delete"
                                BackgroundColor="Red"
                                Command="{Binding BindingContext.DeleteTodoCommand, Source={x:Reference MainPage}}"
                                CommandParameter="{Binding .}"/>
                        </SwipeItems>
                    </SwipeView.RightItems>

                    <Grid Padding="12">
                        <Label
                            Text="{Binding Title}"
                            FontSize="18"/>
                    </Grid>
                </SwipeView>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>


</ContentPage>
