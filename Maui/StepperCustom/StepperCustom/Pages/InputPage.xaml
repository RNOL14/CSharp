<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:controls="clr-namespace:StepperCustom.Controls"
  x:Class="StepperCustom.Pages.InputPage"
  Title="Input Page">

  <VerticalStackLayout Padding="20"
      Spacing="25">

    <Label
      Text="Custom Stepper Example"
      FontSize="22"
      HorizontalOptions="Center"/>

    <!-- Custom Stepper -->
    <controls:MildredStepper
      HorizontalOptions="Center"
      VerticalOptions="Center"
      Value="{Binding Count, Mode=TwoWay}"/>

    <Label
      Text="{Binding Count, StringFormat='Current Count = {0}'}"
      FontSize="18"
      HorizontalOptions="Center"/>

    <Button
      Text="Reset"
      Command="{Binding ResetCommand}"/>

  </VerticalStackLayout>

</ContentPage>
