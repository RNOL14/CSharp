<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiCalculator.MainPage">
    <Grid
        ColumnDefinitions=",,,"
        RowDefinitions=",,,,*"
        RowSpacing="2"
        ColumnSpacing="2">

        <!-- LCD SCREEN -->
        <Label
            x:Name="LCD"
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Text="0"
            FontSize="40"
            HorizontalTextAlignment="End"
            VerticalTextAlignment="Center"
            Padding="20"
            BackgroundColor="#D1E0B3"
            TextColor="Black"/>

        <!-- ROW 1 -->
        <Button Text="7"
                Grid.Row="1"
                Grid.Column="0"
                Clicked="Button_Clicked"/>
        <Button Text="8"
                Grid.Row="1"
                Grid.Column="1"
                Clicked="Button_Clicked"/>
        <Button Text="9"
                Grid.Row="1"
                Grid.Column="2"
                Clicked="Button_Clicked"/>
        <Button Text="+"
                Grid.Row="1"
                Grid.Column="3"
                Clicked="Button_Clicked"/>

        <!-- ROW 2 -->
        <Button Text="4"
                Grid.Row="2"
                Grid.Column="0"
                Clicked="Button_Clicked"/>
        <Button Text="5"
                Grid.Row="2"
                Grid.Column="1"
                Clicked="Button_Clicked"/>
        <Button Text="6"
                Grid.Row="2"
                Grid.Column="2"
                Clicked="Button_Clicked"/>
        <Button Text="-"
                Grid.Row="2"
                Grid.Column="3"
                Clicked="Button_Clicked"/>

        <!-- ROW 3 -->
        <Button Text="1"
                Grid.Row="3"
                Grid.Column="0"
                Clicked="Button_Clicked"/>
        <Button Text="2"
                Grid.Row="3"
                Grid.Column="1"
                Clicked="Button_Clicked"/>
        <Button Text="3"
                Grid.Row="3"
                Grid.Column="2"
                Clicked="Button_Clicked"/>
        <Button Text="*"
                Grid.Row="3"
                Grid.Column="3"
                Clicked="Button_Clicked"/>

        <!-- ROW 4 -->
        <Button Text="0"
                Grid.Row="4"
                Grid.Column="0"
                Clicked="Button_Clicked"/>
        <Button Text="."
                Grid.Row="4"
                Grid.Column="1"
                Clicked="Button_Clicked"/>
        <Button Text="="
                Grid.Row="4"
                Grid.Column="2"
                Clicked="Button_Clicked"/>
        <Button Text="/"
                Grid.Row="4"
                Grid.Column="3"
                Clicked="Button_Clicked"/>

    </Grid>


</ContentPage>
